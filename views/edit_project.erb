<h2><%= @project.title %></h2>


<form action="/projects/<%= @project.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <h3>Update the Project Title</h3>
    <label for="title"></label>
    <input type="text" id="title" name="title">

    <button type="submit" class="btn btn-primary">Update Project</button>
  </div>
</form>

<form action="/volunteer-added" method="post">
  <div class="form-group">
    <h3>Add a Volunteer to this Project</h3>
    <input type="hidden" name="project_id" value="<%= @project.id %>">
    <input type="text" name="name">

    <button type="submit" class="btn btn-primary">Add Volunteer</button>
  </div>
</form>

<form action="/project-deleted" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="hidden" name="project_id" value="<%= @project.id %>">
  <button type="submit" class="btn btn-danger">Delete Project</button>
</form>
